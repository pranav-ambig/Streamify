{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Run Frontend",
        "type": "shell",
        "command": "npm",
        "args": ["run", "dev"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "reveal": "always",
          "focus": true,
          "panel": "dedicated"
        },
        "options": {
          "cwd": "${workspaceFolder}/frontend"
        }
      },
      {
        "label": "Run Backend",
        "type": "shell",
        "command": "npm",
        "args": ["start"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "reveal": "always",
          "focus": true,
          "panel": "dedicated"
        },
        "options": {
          "cwd": "${workspaceFolder}/backend"
        }
      }
    ]
  }
  